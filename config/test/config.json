{
  "logLevel": "error",
  "host": {
    "protocol": "http",
    "domain": "localhost",
    "port": 3000,
    "apiPathPrefix": "/api/v1"
  },
  "modules": {
    "apiEndpoints": {
      "requester": "/services/requesterService.js"
    },
    "services": {
      "requester-cluster": "/services/lib/requester-cluster.js",
      "requester": "/services/lib/requester.js",
      "responder": "/services/lib/responder.js",
      "socket": "/services/lib/socket.js"
    }
  },
  "services": {
    "requester-cluster": {
      "processes": 3,
      "timeout": 10000,
      "listenPort": 5678
    },
    "requester": {
      "connection": {
        "protocol": "tcp",
        "domain": "test",
        "port": 5432
      },
      "timeout": 10000
    },
    "responder": {
      "processes": 1,
      "connection": {
        "protocol": "tcp",
        "domain": "*",
        "port": 5432
      },
      "router": {
        "connection": {
          "protocol": "tcp",
          "domain": "*",
          "port": 5433
        }
      },
      "dealer": {
        "connection": {
          "protocol": "ipc",
          "domain": "filer-dealer.ipc"
        }
      }     
    },
    "socket": {
      "connection": {
        "port": 5678,
        "host": "localhost"
      }
    }
  },
  "apiEndpoints": {
    "requester": {
      "handlers": [
        {
          "service": "socket",
          "call": "makeRequest",
          "path": "/request",
          "method": "get"
        },
        {
          "path": "/connect",
          "method": "get",
          "service": "socket",
          "call": "connect"
        }
      ]
    }
  }
}