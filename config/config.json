{
  "logLevel": "error",
  "host": {
    "protocol": "http",
    "domain": "localhost",
    "port": 3000,
    "apiPathPrefix": "/api/v1"
  },
  "services": {
    "requester-manager": {
      "handler": "requester-cluster"
    },
    "requester-cluster": {
      "module": "requester-cluster.js",
      "handler": "requester",
      "processes": 3,
      "timeout": 10000,
      "listenPort": 5678
    },
    "requester": {
      "module": "requester.js",
      "connection": {
        "protocol": "tcp",
        "domain": "*",
        "port": 5432
      },
      "timeout": 10000
    },
    "responder-manager": {
      "handler": "responder"
    },
    "responder-cluster": {
      "module": "responder-cluster.js",
      "handler": "responder",
      "processes": 1,
      "router": {
        "connection": {
          "protocol": "tcp",
          "domain": "*",
          "port": 5432
        }
      },
      "dealer": {
        "connection": {
          "protocol": "ipc",
          "domain": "filer-dealer.ipc"
        }
      }   
    },
    "responder": {
      "module": "responder.js",
      "connection": {
        "protocol": "tcp",
        "domain": "*",
        "port": 5432
      }
    },
    "socket": {
      "module": "socket.js",
      "connection": {
        "port": 5678,
        "host": "localhost"
      }
    }
  },
  "apiEndpoints": {
    "dispatcher": {
      "module": "dispatcher.js",
      "handlers": [
        {
          "service": "socket",
          "function": "makeRequest",
          "path": "/dispatcher/request",
          "method": "get"
        },
        {
          "service": "socket",
          "function": "connect",
          "path": "/dispatcher/connect",
          "method": "get"
        }
      ]
    }
  }
}